<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity_ex">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="220dp"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:text="Just Exercise!"
        android:textSize="30sp"/>

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:onClick="factone"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/one" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-130dp"
                android:layout_marginTop="190dp"
                android:text="hammer curl"
                android:textSize="20sp"
                android:textColor="#fff" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="20dp"
                android:onClick="nexttwo"
                android:layout_toRightOf="@id/imageView1"
                app:srcCompat="@drawable/two" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="-105dp"
                android:text="Squat"
                android:textColor="#fff"
                android:textSize="20sp"
                android:layout_below="@id/imageView2"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="20dp"
                android:onClick="nextthree"
                app:srcCompat="@drawable/three" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-110dp"
                android:layout_marginTop="190dp"
                android:text="Sit Up"
                android:textSize="20sp"
                android:textColor="#fff" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="20dp"
                android:onClick="nextfour"
                android:layout_toRightOf="@id/imageView3"
                app:srcCompat="@drawable/four" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="-120dp"
                android:text="Split Squat"
                android:textColor="#fff"
                android:textSize="20sp"
                android:layout_below="@id/imageView4"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="20dp"
                android:onClick="nextfive"
                app:srcCompat="@drawable/five" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-135dp"
                android:layout_marginTop="190dp"
                android:text="Mountain climbers"
                android:textColor="#fff" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="20dp"
                android:onClick="nextsix"
                android:layout_toRightOf="@id/imageView3"
                app:srcCompat="@drawable/six" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="-120dp"
                android:text="Walking Lunges"
                android:textColor="#fff"
                android:layout_below="@id/imageView4"/>

        </TableRow>

    </TableLayout>


</RelativeLayout>